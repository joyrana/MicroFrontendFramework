      "sourceMap": true,
      "module": "commonjs",
      "target": "es5",
      "allowJs": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "typeRoots": [
          "node_modules/@types"
      ]
